+
+int fastlz_compress_level(unsigned char *hash_table, int level,
+			  const void *input, int length,
+			  void *output)
+{
+	if (level == 1)
+		return fastlz1_compress(hash_table, input, length, output);
+	if (level == 2)
+		return fastlz2_compress(hash_table, input, length, output);
+
